{
	"name": "api-rest-nodejs",
	"version": "1.0.0",
	"description": "API REST con Node.js y Express, con una p√°gina HTML para probar las funciones",
	"main": "dist/app.js",
	"scripts": {
		"build:css": "npx tailwindcss -i ./public/styles.css -o ./public/dist/styles.css",
		"build:ts": "tsc",
		"build": "npm run build:css && npm run build:ts",
		"start": "node dist/app.js",
		"dev": "concurrently \"npm run server\" \"npm run watch:tailwind\" \"lite-server\"",
		"server": "nodemon",
		"watch:tailwind": "pnpx tailwindcss -i ./public/styles.css -o ./public/dist/styles.css --watch",
		"test": "jest",
		"migrate": "sequelize db:migrate",
		"seed": "sequelize db:seed:all",
		"lint": "eslint .",
		"lint:fix": "eslint --fix ."
	},
	"devDependencies": {
		"@kembec/eslint-config": "^1.1.3",
		"@types/body-parser": "^1.19.5",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.14.10",
		"@types/pg": "^8.11.6",
		"@types/sequelize": "^4.28.20",
		"@types/supertest": "^6.0.2",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"jest": "^29.7.0",
		"lite-server": "^2.6.1",
		"nodemon": "^3.1.4",
		"postcss": "^8.4.39",
		"supertest": "^7.0.0",
		"tailwindcss": "^3.4.4",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"pg": "^8.12.0",
		"sequelize": "^6.37.3"
	}
}
